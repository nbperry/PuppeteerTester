{
  "name": "puppeteer-testing-tool",
  "version": "0.0.1",
  "description": "Tool used for generating snapshots of a website as a part of CI/CD process",
  "main": "dist/bin/ptt.js",
  "author": {
    "name": "Nathan Brooker Perry",
    "email": "nbp8557@rit.edu"
  },
  "contributors": [
    {
      "name": "Justin Firth",
      "email": "jmfirth@gmail.com"
    }
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "concurrently \"yarn run watch\" \"yarn run dev\"",
    "cli": "node dist/bin/ptt.js snapshot -c ptt.config.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "wait-on dist/run-snapshot.js && nodemon dist/run-snapshot.js",
    "pretty": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -c ./tslint.json --project ./tsconfig.json -e \"src/**/*.d.ts\"",
    "test": "jest",
    "precommit": "lint-staged && yarn run lint && yarn test",
    "docs:build": "typedoc --mode modules --excludeExternals --includeDeclarations --out docs/ src/",
    "docs:serve": "serve docs/"
  },
  "lint-staged": {
    "*.ts": [
      "yarn run pretty",
      "git add"
    ]
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "commander": "^2.11.0",
    "date-fns": "^1.29.0",
    "interpret": "^1.0.4",
    "jpeg-js": "^0.3.3",
    "mkdirp": "^0.5.1",
    "pixelmatch": "^4.0.2",
    "pngjs": "^3.3.0",
    "puppeteer": "^0.12.0"
  },
  "devDependencies": {
    "@types/commander": "^2.11.0",
    "@types/jest": "^21.1.5",
    "@types/jpeg-js": "^0.3.0",
    "@types/mkdirp": "^0.5.1",
    "@types/node": "^8.0.47",
    "@types/pngjs": "^3.3.0",
    "@types/puppeteer": "^0.12.1",
    "concurrently": "^3.5.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.7.4",
    "serve": "^6.4.1",
    "ts-jest": "^21.1.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.1",
    "wait-on": "^2.0.2"
  }
}
