{
  "name": "puppeteer-testing-tool",
  "version": "0.0.1",
  "description": "Tool used for generating snapshots of a website as a part of CI/CD process",
  "main": "dist/bin/ptt.js",
  "author": "Nathan Brooker Perry",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "concurrently \"yarn run watch\" \"yarn run dev\"",
    "cli": "node dist/bin/ptt.js snapshot -c ptt.config.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "wait-on dist/run-snapshot.js && nodemon dist/run-snapshot.js",
    "pretty": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -c ./tslint.json --project ./tsconfig.json -e \"src/**/*.d.ts\"",
    "test": "jest",
    "precommit": "lint-staged && yarn run lint && yarn test"
  },
  "lint-staged": {
    "*.ts": [
      "yarn run pretty",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "@types/commander": "^2.11.0",
    "@types/mkdirp": "^0.5.1",
    "commander": "^2.11.0",
    "interpret": "^1.0.4",
    "mkdirp": "^0.5.1",
    "puppeteer": "^0.12.0",
    "wait-on": "^2.0.2"
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "@types/puppeteer": "^0.12.1",
    "concurrently": "^3.5.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.7.4",
    "ts-jest": "^21.1.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.1"
  }
}
